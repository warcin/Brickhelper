<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/plainName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="84dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Podaj nazwę pliku"/>


    <Button
        android:text="Anuluj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCancel" app:layout_constraintStart_toEndOf="@+id/buttonSend"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/plainName"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="cancel" />

    <Button
        android:text="Wyślij"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSend" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/buttonCancel"
        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/plainName"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="send" />


</androidx.constraintlayout.widget.ConstraintLayout>